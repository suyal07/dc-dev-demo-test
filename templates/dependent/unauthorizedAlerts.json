{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
	"alertRuleName": {
            "type": "String"
        },
        "actionGroupExternalid": {
            "type": "String"
        },
        "resourceGroupReferencewithAPIMHosted": {
            "type": "String"
        }

 },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2025-01-01-preview",
            "name": "[parameters('alertRuleName')]",
            "location": "uksouth",
            "tags": {
                "Application": "datacatalyst-demo",
                "Client": "nowvertical",
                "CostCenter": "123cc",
                "DataSensitivity": "internal",
                "Environment": "dev",
                "Lifecycle": "active",
                "ManagedBy": "nowvertical",
                "Master_tag": "Technology:DataCatalyst:SMALLAYA:KKNOPP:AR:N",
                "Project": "datacatalyst",
                "Region": "uksouth",
                "Solution": "data-integration",
                "Tier": "core"
            },
            "kind": "LogAlert",
            "properties": {
                "displayName": "[parameters('alertRuleName')]",
                "description": "This alert rule detects API failures over the period of 5 minutes and gets triggered if atleast 1 API calls fails in a duration of 5 mins",
                "severity": 1,
                "enabled": true,
                "evaluationFrequency": "PT5M",
                "scopes": [
                    "[parameters('resourceGroupReferencewithAPIMHosted')]"
                ],
                "targetResourceTypes": [],
                "windowSize": "PT5M",
                "overrideQueryTimeRange": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "query": "ApiManagementGatewayLogs\n| where IsRequestSuccess == false and isnotempty(OperationId)\n|project _ResourceId, OperationId, ErrorMessage = LastErrorMessage\n",
                            "timeAggregation": "Count",
                            "dimensions": [
                                {
                                    "name": "OperationId",
                                    "operator": "Include",
                                    "values": [
                                        "*"
                                    ]
                                }
                            ],
                            "operator": "GreaterThanOrEqual",
                            "threshold": 1,
                            "failingPeriods": {
                                "numberOfEvaluationPeriods": 1,
                                "minFailingPeriodsToAlert": 1
                            }
                        }
                    ]
                },
                "autoMitigate": true,
                "actions": {
                    "actionGroups": [
                        "[parameters('actionGroupExternalid')]"
                    ],
                    "customProperties": {},
                    "actionProperties": {}
                }
            }
        }
    ]
}
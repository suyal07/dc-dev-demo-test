{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subscriptionId": {
      "type": "string",
      "metadata": {
        "description": "Subscription ID for the function app"
      }
    },
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the function app"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for the function app"
      }
    },
    "storageBlobContainerName": {
      "type": "string",
      "metadata": {
        "description": "Name of the storage blob container"
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the storage account"
      }
    },
    "sku": {
      "type": "string",
      "metadata": {
        "description": "SKU for the hosting plan"
      }
    },
    "skuCode": {
      "type": "string",
      "metadata": {
        "description": "SKU code for the hosting plan"
      }
    },
    "workerSize": {
      "type": "string",
      "metadata": {
        "description": "Worker size for the hosting plan"
      }
    },
    "workerSizeId": {
      "type": "string",
      "metadata": {
        "description": "Worker size ID for the hosting plan"
      }
    },
    "numberOfWorkers": {
      "type": "string",
      "metadata": {
        "description": "Number of workers for the hosting plan"
      }
    },
    "hostingPlanName": {
      "type": "string",
      "metadata": {
        "description": "Name of the hosting plan"
      }
    },
    "serverFarmResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group for the server farm"
      }
    },
    "alwaysOn": {
      "type": "bool",
      "metadata": {
        "description": "Always On setting for the function app"
      }
    },
    "logAnalyticsWorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Log Analytics workspace"
      }
    },
    "logAnalyticsWorkspaceResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group for the Log Analytics workspace"
      }
    }
  },
  "variables": {
    "storageAccountResourceGroup": "datacatalyst-demo-dev-core-test-rg",
    "appInsightsName": "[concat(parameters('name'), '-appinsights')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[parameters('hostingPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('skuCode')]",
        "tier": "[parameters('sku')]",
        "size": "[parameters('workerSize')]",
        "family": "Y",
        "capacity": "[parameters('numberOfWorkers')]"
      },
      "properties": {
        "reserved": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "siteConfig": {
          "alwaysOn": "[parameters('alwaysOn')]",
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId(variables('storageAccountResourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2022-05-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId(variables('storageAccountResourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2022-05-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[parameters('storageBlobContainerName')]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').ConnectionString]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').InstrumentationKey]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "dotnet"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('appInsightsName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId(variables('logAnalyticsWorkspaceResourceGroup'), 'Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
      ],
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[resourceId(variables('logAnalyticsWorkspaceResourceGroup'), 'Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
      }
    }
  ],
  "outputs": {
    "functionAppId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/sites', parameters('name'))]"
    }
  }
}
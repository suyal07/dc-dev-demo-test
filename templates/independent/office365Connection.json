{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Template to create Office 365 API connection for Logic Apps"
  },
  "parameters": {
    "connectionName": {
      "type": "string",
      "defaultValue": "office365",
      "metadata": {
        "description": "Name of the Office 365 connection"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the connection"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[parameters('connectionName')]",
      "location": "[parameters('location')]",
      "kind": "V1",
      "properties": {
        "displayName": "Office 365 Outlook",
        "customParameterValues": {},
        "nonSecretParameterValues": {},
        "api": {
          "name": "[parameters('connectionName')]",
          "displayName": "Office 365 Outlook",
          "description": "Microsoft Office 365 is a cloud-based service that is designed to help meet your organization's needs for robust security, reliability, and user productivity.",
          "iconUri": "[concat('https://connectoricons-prod.azureedge.net/releases/v1.0.1546/1.0.1546.2665/', parameters('connectionName'), '/icon.png')]",
          "brandColor": "#0078d4",
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), parameters('connectionName'))]",
          "type": "Microsoft.Web/locations/managedApis"
        },
        "testLinks": []
      }
    }
  ],
  "outputs": {
    "connectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', parameters('connectionName'))]"
    }
  }
}

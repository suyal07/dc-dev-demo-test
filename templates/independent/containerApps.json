{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerAppName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Container App for Data API Builder"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        },
        "environmentName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Container App Environment"
            }
        },
        "minReplicas": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "Minimum number of replicas"
            }
        },
        "maxReplicas": {
            "type": "int",
            "defaultValue": 3,
            "metadata": {
                "description": "Maximum number of replicas"
            }
        },
        "databaseConnectionString": {
            "type": "securestring",
            "defaultValue": null,
            "metadata": {
                "description": "Connection string for the database (optional, can be set later)"
            }
        },
        "configPath": {
            "type": "string",
            "defaultValue": "/app/dab-config.json",
            "metadata": {
                "description": "Path to the Data API Builder configuration file"
            }
        },
        "containerImage": {
            "type": "string",
            "defaultValue": "mcr.microsoft.com/azure-databases/data-api-builder:latest",
            "metadata": {
                "description": "Container image for Data API Builder"
            }
        }
    },
    "variables": {
        "logAnalyticsWorkspaceName": "[format('{0}-logs', parameters('containerAppName'))]",
        "containerAppEnvName": "[parameters('environmentName')]"
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2022-10-01",
            "name": "[variables('logAnalyticsWorkspaceName')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "PerGB2018"
                },
                "retentionInDays": 30,
                "features": {
                    "enableLogAccessUsingOnlyResourcePermissions": true
                }
            }
        },
        {
            "type": "Microsoft.App/managedEnvironments",
            "apiVersion": "2022-10-01",
            "name": "[variables('containerAppEnvName')]",
            "location": "[parameters('location')]",
            "properties": {
                "appLogsConfiguration": {
                    "destination": "log-analytics",
                    "logAnalyticsConfiguration": {
                        "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))).customerId]",
                        "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName')), '2022-10-01').primarySharedKey]"
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
            ]
        },
        {
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2022-10-01",
            "name": "[parameters('containerAppName')]",
            "location": "[parameters('location')]",
            "properties": {
                "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]",
                "configuration": {
                    "ingress": {
                        "external": true,
                        "targetPort": 5000,
                        "allowInsecure": false,
                        "traffic": [
                            {
                                "latestRevision": true,
                                "weight": 100
                            }
                        ]
                    },
                    "secrets": "[if(empty(parameters('databaseConnectionString')), json('[]'), json(concat('[{\"name\": \"connection-string-secret\", \"value\": \"', parameters('databaseConnectionString'), '\"}]')))]"
                },
                "template": {
                    "containers": [
                        {
                            "name": "dab-container",
                            "image": "[parameters('containerImage')]",
                            "resources": {
                                "cpu": "0.5",
                                "memory": "1Gi"
                            },
                            "env": [
                                {
                                    "name": "ASPNETCORE_URLS",
                                    "value": "http://0.0.0.0:5000"
                                },
                                {
                                    "name": "CONNECTION_STRING_OPTION",
                                    "secretRef": "[if(empty(parameters('databaseConnectionString')), null, 'connection-string-secret')]"
                                },
                                {
                                    "name": "LogLevel__Default",
                                    "value": "Information"
                                },
                                {
                                    "name": "Runtime__RestPort",
                                    "value": "5000"
                                },
                                {
                                    "name": "Runtime__GraphQLPort",
                                    "value": "5000"
                                },
                                {
                                    "name": "Runtime__Host",
                                    "value": "0.0.0.0"
                                },
                                {
                                    "name": "DataSource__Options__Server",
                                    "value": "[if(empty(parameters('databaseConnectionString')), '', '${CONNECTION_STRING_OPTION}')]"
                                },
                                {
                                    "name": "CONFIG_PATH",
                                    "value": "[parameters('configPath')]"
                                }
                            ]
                        }
                    ],
                    "scale": {
                        "minReplicas": "[parameters('minReplicas')]",
                        "maxReplicas": "[parameters('maxReplicas')]",
                        "rules": [
                            {
                                "name": "http-scale-rule",
                                "http": {
                                    "metadata": {
                                        "concurrentRequests": "100"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]"
            ]
        }
    ],
    "outputs": {
        "containerAppFqdn": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.App/containerApps', parameters('containerAppName'))).configuration.ingress.fqdn]"
        },
        "containerAppUrl": {
            "type": "string",
            "value": "[format('https://{0}', reference(resourceId('Microsoft.App/containerApps', parameters('containerAppName'))).configuration.ingress.fqdn)]"
        }
    }
}
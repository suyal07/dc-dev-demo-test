{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroups": {
      "type": "array",
      "metadata": {
        "description": "Array of resource groups to create, each with name and location"
      }
    },
    "storageAccounts": {
      "type": "array",
      "metadata": {
        "description": "Array of storage accounts to create, each with name, resourceGroup, blobSoftDeleteRetentionDays, and containerSoftDeleteRetentionDays"
      }
    },
    "sqlServers": {
      "type": "array",
      "metadata": {
        "description": "Array of SQL Servers to create, each with sqlServerName, resourceGroup, administratorLogin, administratorLoginPassword, sqlDatabaseName, databaseEdition, and requestedServiceObjectiveName"
      }
    }
  },
  "variables": {
    "storageAccountTemplateUri": "https://raw.githubusercontent.com/suyal07/dc-dev-demo-test/main/templates/independent/storageAccount.json",
    "sqlServerTemplateUri": "https://raw.githubusercontent.com/suyal07/dc-dev-demo-test/main/templates/independent/sqlServer.json"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[parameters('resourceGroups')[copyIndex()].name]",
      "location": "[parameters('resourceGroups')[copyIndex()].location]",
      "copy": {
        "name": "resourceGroupCopy",
        "count": "[length(parameters('resourceGroups'))]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('storageAccountDeployment-', parameters('storageAccounts')[copyIndex()].name)]",
      "resourceGroup": "[parameters('storageAccounts')[copyIndex()].resourceGroup]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', parameters('storageAccounts')[copyIndex()].resourceGroup)]"
      ],
      "copy": {
        "name": "storageAccountCopy",
        "count": "[length(parameters('storageAccounts'))]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('storageAccountTemplateUri')]"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[parameters('storageAccounts')[copyIndex()].name]"
          },
          "blobSoftDeleteRetentionDays": {
            "value": "[parameters('storageAccounts')[copyIndex()].blobSoftDeleteRetentionDays]"
          },
          "containerSoftDeleteRetentionDays": {
            "value": "[parameters('storageAccounts')[copyIndex()].containerSoftDeleteRetentionDays]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('sqlServerDeployment-', parameters('sqlServers')[copyIndex()].sqlServerName)]",
      "resourceGroup": "[parameters('sqlServers')[copyIndex()].resourceGroup]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', parameters('sqlServers')[copyIndex()].resourceGroup)]"
      ],
      "copy": {
        "name": "sqlServerCopy",
        "count": "[length(parameters('sqlServers'))]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sqlServerTemplateUri')]"
        },
        "parameters": {
          "sqlServerName": {
            "value": "[parameters('sqlServers')[copyIndex()].sqlServerName]"
          },
          "administratorLogin": {
            "value": "[parameters('sqlServers')[copyIndex()].administratorLogin]"
          },
          "administratorLoginPassword": {
            "value": "[parameters('sqlServers')[copyIndex()].administratorLoginPassword]"
          },
          "sqlDatabaseName": {
            "value": "[parameters('sqlServers')[copyIndex()].sqlDatabaseName]"
          },
          "databaseEdition": {
            "value": "[parameters('sqlServers')[copyIndex()].databaseEdition]"
          },
          "requestedServiceObjectiveName": {
            "value": "[parameters('sqlServers')[copyIndex()].requestedServiceObjectiveName]"
          }
        }
      }
    }
  ],
  "outputs": {
    "resourceGroupsCreated": {
      "type": "array",
      "value": "[parameters('resourceGroups')]"
    },
    "storageAccountsCreated": {
      "type": "array",
      "value": "[parameters('storageAccounts')]"
    },
    "sqlServersCreated": {
      "type": "array",
      "value": "[parameters('sqlServers')]"
    }
  }
}
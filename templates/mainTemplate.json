{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroups": {
      "type": "array",
      "metadata": {
        "description": "Array of resource groups to create, each with name and location"
      }
    },
    "storageAccounts": {
      "type": "array",
      "metadata": {
        "description": "Array of storage accounts to create, each with name, resourceGroup, blobSoftDeleteRetentionDays, and containerSoftDeleteRetentionDays"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[parameters('resourceGroups')[copyIndex()].name]",
      "location": "[parameters('resourceGroups')[copyIndex()].location]",
      "copy": {
        "name": "resourceGroupCopy",
        "count": "[length(parameters('resourceGroups'))]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('storageAccountDeployment-', parameters('storageAccounts')[copyIndex()].name)]",
      "resourceGroup": "[parameters('storageAccounts')[copyIndex()].resourceGroup]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', parameters('storageAccounts')[copyIndex()].resourceGroup)]"
      ],
      "copy": {
        "name": "storageAccountCopy",
        "count": "[length(parameters('storageAccounts'))]"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "storageAccountName": {
              "type": "string",
              "metadata": {
                "description": "Name of the storage account (3-24 lowercase letters and numbers)"
              },
              "minLength": 3,
              "maxLength": 24
            },
            "blobSoftDeleteRetentionDays": {
              "type": "int",
              "minValue": 1,
              "maxValue": 365,
              "metadata": {
                "description": "Number of days to retain soft-deleted blobs (1-365)"
              }
            },
            "containerSoftDeleteRetentionDays": {
              "type": "int",
              "minValue": 1,
              "maxValue": 365,
              "metadata": {
                "description": "Number of days to retain soft-deleted containers (1-365)"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Storage/storageAccounts",
              "apiVersion": "2023-01-01",
              "name": "[parameters('storageAccountName')]",
              "location": "[resourceGroup().location]",
              "sku": {
                "name": "Standard_LRS"
              },
              "kind": "StorageV2",
              "properties": {
                "accessTier": "Hot",
                "minimumTlsVersion": "TLS1_2",
                "supportsHttpsTrafficOnly": true,
                "allowBlobPublicAccess": false,
                "isHnsEnabled": true,
                "isNfsV3Enabled": false,
                "isSftpEnabled": false
              }
            },
            {
              "type": "Microsoft.Storage/storageAccounts/blobServices",
              "apiVersion": "2023-01-01",
              "name": "[concat(parameters('storageAccountName'), '/default')]",
              "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
              ],
              "properties": {
                "deleteRetentionPolicy": {
                  "enabled": true,
                  "days": "[parameters('blobSoftDeleteRetentionDays')]"
                },
                "containerDeleteRetentionPolicy": {
                  "enabled": true,
                  "days": "[parameters('containerSoftDeleteRetentionDays')]"
                },
                "isVersioningEnabled": false,
                "changeFeed": {
                  "enabled": false
                }
              }
            }
          ]
        },
        "parameters": {
          "storageAccountName": {
            "value": "[parameters('storageAccounts')[copyIndex()].name]"
          },
          "blobSoftDeleteRetentionDays": {
            "value": "[parameters('storageAccounts')[copyIndex()].blobSoftDeleteRetentionDays]"
          },
          "containerSoftDeleteRetentionDays": {
            "value": "[parameters('storageAccounts')[copyIndex()].containerSoftDeleteRetentionDays]"
          }
        }
      }
    }
  ],
  "outputs": {
    "resourceGroupsCreated": {
      "type": "array",
      "value": "[parameters('resourceGroups')]"
    },
    "storageAccountsCreated": {
      "type": "array",
      "value": "[parameters('storageAccounts')]"
    }
  }
}
{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroups": {
      "type": "array",
      "metadata": {
        "description": "Array of resource groups to create, each with name and location"
      }
    },
    "storageAccounts": {
      "type": "array",
      "metadata": {
        "description": "Array of storage accounts to create, each with name, resourceGroup, blobSoftDeleteRetentionDays, and containerSoftDeleteRetentionDays"
      }
    },
    "sqlServers": {
      "type": "array",
      "metadata": {
        "description": "Array of SQL Servers to create, each with sqlServerName, resourceGroup, administratorLogin, administratorLoginPassword, sqlDatabaseName, databaseEdition, requestedServiceObjectiveName, maxSizeBytes, collation, backupRetentionDays, and backupStorageRedundancy"
      }
    },
    "logAnalyticsWorkspaces": {
      "type": "array",
      "metadata": {
        "description": "Array of Log Analytics Workspaces to create, each with logAnalyticsWorkspaceName and resourceGroup"
      }
    },
    "containerApps": {
      "type": "array",
      "metadata": {
        "description": "Array of Container Apps to create, each with containerAppName, location, environmentName, minReplicas, maxReplicas, databaseConnectionString, configPath, and containerImage"
      }
    }
  },
  "variables": {
    "storageAccountTemplateUri": "https://raw.githubusercontent.com/suyal07/dc-dev-demo-test/main/templates/independent/storageAccount.json",
    "sqlServerTemplateUri": "https://raw.githubusercontent.com/suyal07/dc-dev-demo-test/main/templates/independent/sqlServer.json",
    "logAnalyticsTemplateUri": "https://raw.githubusercontent.com/suyal07/dc-dev-demo-test/main/templates/independent/logAnalytics.json",
    "containerAppsTemplateUri": "https://raw.githubusercontent.com/suyal07/dc-dev-demo-test/main/templates/independent/containerApps.json"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[parameters('resourceGroups')[copyIndex()].name]",
      "location": "[parameters('resourceGroups')[copyIndex()].location]",
      "copy": {
        "name": "resourceGroupCopy",
        "count": "[length(parameters('resourceGroups'))]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('storageAccountDeployment-', parameters('storageAccounts')[copyIndex()].name)]",
      "resourceGroup": "[parameters('storageAccounts')[copyIndex()].resourceGroup]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', parameters('storageAccounts')[copyIndex()].resourceGroup)]"
      ],
      "copy": {
        "name": "storageAccountCopy",
        "count": "[length(parameters('storageAccounts'))]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('storageAccountTemplateUri')]"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[parameters('storageAccounts')[copyIndex()].name]"
          },
          "blobSoftDeleteRetentionDays": {
            "value": "[parameters('storageAccounts')[copyIndex()].blobSoftDeleteRetentionDays]"
          },
          "containerSoftDeleteRetentionDays": {
            "value": "[parameters('storageAccounts')[copyIndex()].containerSoftDeleteRetentionDays]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('sqlServerDeployment-', parameters('sqlServers')[copyIndex()].sqlServerName)]",
      "resourceGroup": "[parameters('sqlServers')[copyIndex()].resourceGroup]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', parameters('sqlServers')[copyIndex()].resourceGroup)]"
      ],
      "copy": {
        "name": "sqlServerCopy",
        "count": "[length(parameters('sqlServers'))]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sqlServerTemplateUri')]"
        },
        "parameters": {
          "sqlServerName": {
            "value": "[parameters('sqlServers')[copyIndex()].sqlServerName]"
          },
          "administratorLogin": {
            "value": "[parameters('sqlServers')[copyIndex()].administratorLogin]"
          },
          "administratorLoginPassword": {
            "value": "[parameters('sqlServers')[copyIndex()].administratorLoginPassword]"
          },
          "sqlDatabaseName": {
            "value": "[parameters('sqlServers')[copyIndex()].sqlDatabaseName]"
          },
          "databaseEdition": {
            "value": "[parameters('sqlServers')[copyIndex()].databaseEdition]"
          },
          "requestedServiceObjectiveName": {
            "value": "[parameters('sqlServers')[copyIndex()].requestedServiceObjectiveName]"
          },
          "maxSizeBytes": {
            "value": "[parameters('sqlServers')[copyIndex()].maxSizeBytes]"
          },
          "collation": {
            "value": "[parameters('sqlServers')[copyIndex()].collation]"
          },
          "backupRetentionDays": {
            "value": "[parameters('sqlServers')[copyIndex()].backupRetentionDays]"
          },
          "backupStorageRedundancy": {
            "value": "[parameters('sqlServers')[copyIndex()].backupStorageRedundancy]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('logAnalyticsDeployment-', parameters('logAnalyticsWorkspaces')[copyIndex()].logAnalyticsWorkspaceName)]",
      "resourceGroup": "[parameters('logAnalyticsWorkspaces')[copyIndex()].resourceGroup]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', parameters('logAnalyticsWorkspaces')[copyIndex()].resourceGroup)]"
      ],
      "copy": {
        "name": "logAnalyticsCopy",
        "count": "[length(parameters('logAnalyticsWorkspaces'))]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('logAnalyticsTemplateUri')]"
        },
        "parameters": {
          "logAnalyticsWorkspaceName": {
            "value": "[parameters('logAnalyticsWorkspaces')[copyIndex()].logAnalyticsWorkspaceName]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('containerAppsDeployment-', parameters('containerApps')[copyIndex()].containerAppName)]",
      "resourceGroup": "[parameters('containerApps')[copyIndex()].resourceGroup]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', parameters('containerApps')[copyIndex()].resourceGroup)]"
      ],
      "copy": {
        "name": "containerAppsCopy",
        "count": "[length(parameters('containerApps'))]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('containerAppsTemplateUri')]"
        },
        "parameters": {
          "containerAppName": {
            "value": "[parameters('containerApps')[copyIndex()].containerAppName]"
          },
          "location": {
            "value": "[parameters('containerApps')[copyIndex()].location]"
          },
          "environmentName": {
            "value": "[parameters('containerApps')[copyIndex()].environmentName]"
          },
          "minReplicas": {
            "value": "[parameters('containerApps')[copyIndex()].minReplicas]"
          },
          "maxReplicas": {
            "value": "[parameters('containerApps')[copyIndex()].maxReplicas]"
          },
          "databaseConnectionString": {
            "value": "[parameters('containerApps')[copyIndex()].databaseConnectionString]"
          },
          "configPath": {
            "value": "[parameters('containerApps')[copyIndex()].configPath]"
          },
          "containerImage": {
            "value": "[parameters('containerApps')[copyIndex()].containerImage]"
          }
        }
      }
    }
  ],
  "outputs": {
    "resourceGroupsCreated": {
      "type": "array",
      "value": "[parameters('resourceGroups')]"
    },
    "storageAccountsCreated": {
      "type": "array",
      "value": "[parameters('storageAccounts')]"
    },
    "sqlServersCreated": {
      "type": "array",
      "value": "[parameters('sqlServers')]"
    },
    "logAnalyticsWorkspacesCreated": {
      "type": "array",
      "value": "[parameters('logAnalyticsWorkspaces')]"
    },
    "containerAppsCreated": {
      "type": "array",
      "value": "[parameters('containerApps')]"
    }
  }
}
{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Production setup template - creates resource groups and key vault for production environment"
  },
  "parameters": {
    "resourceGroups": {
      "type": "array",
      "defaultValue": [
        {
          "name": "datacatalyst-demo-prod-core-rg",
          "location": "uksouth"
        },
        {
          "name": "datacatalyst-demo-prod-source-rg",
          "location": "uksouth"
        }
      ],
      "metadata": {
        "description": "Array of production resource groups to create"
      }
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": "dc-demo-prod-core-kv",
      "metadata": {
        "description": "Name of the production Key Vault"
      }
    },
    "keyVaultLocation": {
      "type": "string",
      "defaultValue": "uksouth",
      "metadata": {
        "description": "Location for the production Key Vault"
      }
    }
  },
  "variables": {
    "coreResourceGroupName": "[parameters('resourceGroups')[0].name]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[parameters('resourceGroups')[copyIndex()].name]",
      "location": "[parameters('resourceGroups')[copyIndex()].location]",
      "copy": {
        "name": "resourceGroupLoop",
        "count": "[length(parameters('resourceGroups'))]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "keyVaultDeployment",
      "resourceGroup": "[variables('coreResourceGroupName')]",
      "dependsOn": [
        "resourceGroupLoop"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.KeyVault/vaults",
              "apiVersion": "2021-06-01-preview",
              "name": "[parameters('keyVaultName')]",
              "location": "[parameters('keyVaultLocation')]",
              "properties": {
                "sku": {
                  "family": "A",
                  "name": "standard"
                },
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [],
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": true,
                "softDeleteRetentionInDays": 7,
                "enableRbacAuthorization": false,
                "enablePurgeProtection": true
              }
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "resourceGroups": {
      "type": "array",
      "value": "[parameters('resourceGroups')]"
    },
    "keyVaultName": {
      "type": "string",
      "value": "[parameters('keyVaultName')]"
    },
    "keyVaultResourceGroup": {
      "type": "string",
      "value": "[variables('coreResourceGroupName')]"
    }
  }
}
